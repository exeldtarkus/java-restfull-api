<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet  author="resthu"  id="sprint69-create-ref-source" dbms="mysql" >
        <createTable
            remarks="Reference table for source in mst_promo"
            schemaName="content"  
            tableName="ref_source" > 
            <column name="id" type="bigint(20)">
                <constraints primaryKey="true" nullable="false" unique="true" />
            </column>
            <column name="name" type="varchar(255)" />
        </createTable>  

        <addAutoIncrement  
            columnDataType="bigint(20)"
            columnName="id" 
            defaultOnNull="false"
            generationType="ALWAYS"
            incrementBy="1"  
            schemaName="content" 
            tableName="ref_source"
        />  

        <insert dbms="mysql"  
            schemaName="content"  
            tableName="ref_source">  
            <column name="id" value="1"/>
            <column name="name" value="Moadmin"/>
        </insert> 
        <insert dbms="mysql"  
            schemaName="content"  
            tableName="ref_source">  
            <column name="id" value="2"/>
            <column name="name" value="BengkelApp"/>
        </insert> 
    </changeSet>
</databaseChangeLog>